<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0">

        <!-- 버튼 -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="다음"
            android:textColor="#eeeeee"
            android:textSize="17dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/start"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/survey_btn"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:text="설문조사"
            android:textColor="#eeeeee"
            android:textSize="17dp"
            android:textStyle="bold"
            />

        <!-- 성별 -->
        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nextButton"
            android:layout_marginTop="5dp"
            android:background="@drawable/title"
            android:text="당신의 성별은?"
            android:textColor="#eeeeee"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/man"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sex"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn2"
            android:textOff="남성"
            android:textOn="남성"
            android:onClick="onToggleClicked"/>

        <ToggleButton
            android:id="@+id/woman"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sex"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn2"
            android:textOff="여성"
            android:textOn="여성"
            android:onClick="onToggleClicked" />

        <!-- 나이 -->
        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            android:layout_below="@+id/man"
            android:layout_marginTop="30dp"
            android:text="당신의 연령대는?"
            android:textColor="#eeeeee"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/age"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn"
            android:textOff="10대 이하"
            android:textOn="10대 이하"
            android:onClick="onToggleClicked" />

        <ToggleButton
            android:id="@+id/ten"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/age"
            android:layout_centerInParent="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn"
            android:textOff="10대"
            android:textOn="10대"
            android:onClick="onToggleClicked" />

        <ToggleButton
            android:id="@+id/twenty"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/age"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn"
            android:textOff="20대"
            android:textOn="20대"
            android:onClick="onToggleClicked"/>

        <ToggleButton
            android:id="@+id/thirty"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/one"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn"
            android:textOff="30대"
            android:textOn="30대"
            android:onClick="onToggleClicked"/>

        <ToggleButton
            android:id="@+id/forty"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/one"
            android:layout_centerInParent="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn"
            android:textOff="40대"
            android:textOn="40대"
            android:onClick="onToggleClicked"/>

        <ToggleButton
            android:id="@+id/fifty"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/one"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn"
            android:textOff="50대 이상"
            android:textOn="50대 이상"
            android:onClick="onToggleClicked"/>

        <!-- 사이즈 -->
        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            android:layout_below="@+id/thirty"
            android:layout_marginTop="30dp"
            android:text="당신의 발 사이즈는?"
            android:textColor="#eeeeee"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/feet"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/size"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_togglebtn3"
            android:textOff="클릭하여 발 사이즈를 선택하세요"
            android:textOn="발 사이즈 선택 완료"
            android:onClick="open"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>